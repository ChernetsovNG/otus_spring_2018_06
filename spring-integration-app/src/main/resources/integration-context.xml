<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:int="http://www.springframework.org/schema/integration"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/integration
        http://www.springframework.org/schema/integration/spring-integration-5.0.xsd">

    <int:gateway service-interface="ru.nchernetsov.integration.PrinterGateway"
                 default-request-channel="inputChannel"/>

    <int:channel id="inputChannel"/>

    <int:channel id="intChannel"/>

    <int:channel id="stringChannel"/>

    <int:channel id="outputChannel"/>

    <bean id="customFilter" class="ru.nchernetsov.integration.CustomFilter"/>

    <int:filter ref="customFilter" input-channel="inputChannel" output-channel="outputChannel"/>

    <bean class="ru.nchernetsov.integration.PrintService" id="printService"/>

    <bean class="ru.nchernetsov.integration.NumericPrintService" id="numericPrintService"/>

    <int:service-activator ref="printService" method="print" input-channel="outputChannel"/>

    <int:service-activator ref="numericPrintService" method="print" input-channel="intChannel"/>

</beans>
